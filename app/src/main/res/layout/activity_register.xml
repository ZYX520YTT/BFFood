<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    tools:context="food.neusoft.com.food.activity.RegisterActivity">


    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="209.5dp"
        android:background="@drawable/login_panel_one"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:hint="手机号"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:singleLine="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_panel_one"
        android:layout_below="@+id/rl_number"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:hint="暂时不输入短信验证码"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/bt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:background="@drawable/register_huoquyanzhengma"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_panel_two"
        android:layout_below="@+id/rl_code"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/et_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:hint="设置密码"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:singleLine="true"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_panel_two"
        android:layout_below="@+id/rl_password1"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/et_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:hint="确认密码"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:singleLine="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/rl_password2"
        android:layout_below="@+id/rl_password2"
        android:layout_centerHorizontal="true"
        >


        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意并接受注册协议"
            android:textColor="@color/white"
            android:textSize="9dp"
            />

    </RelativeLayout>



    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_panel_three"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="完成注册"
        android:textSize="15dp"
        android:textColor="@color/white"
        >
    </Button>





</RelativeLayout>
