<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="433.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/panel_groundback">

        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="10dp"
                android:text="日期"
                android:textColor="#fff"
                android:textSize="18.5dp" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_date"
                android:layout_marginLeft="13.5dp"
                android:layout_toRightOf="@+id/tv_title_date"
                android:text="11月9日"
                android:textColor="#fff"
                android:textSize="13.5dp" />
            <TextView
                android:id="@+id/tv_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_date"
                android:layout_marginLeft="13.5dp"
                android:layout_toRightOf="@+id/tv_date"
                android:text="今天"
                android:textColor="#fff"
                android:textSize="13.5dp" />
        </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_below="@+id/rl_date"
            android:layout_marginTop="16.5dp"
            >
        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/view_date"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="21.5dp"
            android:background="#fff"
            android:layout_below="@+id/rv_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_date"
            >

            <TextView
                android:id="@+id/tv_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13.5dp"
                android:textSize="18.5dp"
                android:text="时间"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_time"
                android:layout_marginLeft="13.5dp"
                android:layout_toRightOf="@+id/tv_title_time"
                android:text="0:00"
                android:textColor="#fff"
                android:textSize="13.5dp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_time"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="20dp"
            >
        </android.support.v7.widget.RecyclerView>


        <View
            android:id="@+id/view_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rv_time"
            android:background="#fff"
            android:layout_marginTop="26.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <RelativeLayout
            android:id="@+id/rl_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_time"
            >
            <TextView
                android:id="@+id/tv_title_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13.5dp"
                android:textSize="18.5dp"
                android:text="人数"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_people"
                android:layout_marginLeft="13.5dp"
                android:layout_toRightOf="@+id/tv_title_people"
                android:text="4人"
                android:textColor="#fff"
                android:textSize="13.5dp" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_people"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="20dp"
            >
        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="133.5dp"
            android:layout_height="43.5dp"
            android:background="@drawable/button"
            android:text="取消"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="33dp"
            />

        <Button
            android:id="@+id/bt_config"
            android:layout_width="133.5dp"
            android:layout_height="43.5dp"
            android:background="@drawable/button_light"
            android:text="确定"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="33dp"
            />



    </RelativeLayout>

</RelativeLayout>