<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layout_marginTop="7dp">

    <LinearLayout
        android:id="@+id/llyt_dynamic_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/iv_image_one"
            android:layout_width="@dimen/hot_photo_wh"
            android:layout_height="@dimen/hot_photo_wh"
            android:scaleType="centerCrop"
            android:src="@drawable/food1" />

        <TextView
            android:id="@+id/tv_dynamic_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="详细内容详细内容详细内容"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/subtitle_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_dynamic_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_image_two"
            android:layout_width="@dimen/hot_photo_wh"
            android:layout_height="@dimen/hot_photo_wh"
            android:scaleType="centerCrop"
            android:src="@drawable/food1" />

        <TextView
            android:id="@+id/tv_dynamic_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="详细内容详细内容详细内容"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/subtitle_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_dynamic_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_image_three"
            android:layout_width="@dimen/hot_photo_wh"
            android:layout_height="@dimen/hot_photo_wh"
            android:scaleType="centerCrop"
            android:src="@drawable/food1" />

        <TextView
            android:id="@+id/tv_dynamic_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="详细内容详细内容详细内容"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/subtitle_text" />

    </LinearLayout>

</LinearLayout>