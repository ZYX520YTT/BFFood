<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226.5dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        >

        <ImageView
            android:id="@+id/iv_west"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pic_west_one"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="彼得西餐厅"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="15.5dp"
            />
        <ImageView
            android:id="@+id/iv_phototype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/view_yu"
            android:layout_alignBottom="@+id/tv_storename"
            android:layout_toRightOf="@+id/tv_storename"
            android:layout_marginLeft="4.5dp"
            android:layout_marginBottom="4dp"
            />



        <ImageView
            android:id="@+id/iv_tiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/view_tiaotiao"
            android:layout_below="@+id/tv_storename"
            android:layout_alignLeft="@+id/tv_storename"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西餐"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_tiao"
            android:layout_marginLeft="11dp"
            android:layout_alignBottom="@+id/iv_tiao"
            />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5km"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/iv_tiao"
            />

    </RelativeLayout>
    
    
    

</FrameLayout>