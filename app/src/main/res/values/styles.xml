<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radiostyle_date">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/date_radio</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="radiostyle_time">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/time_radio</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="radiostyle_people">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/people_radio</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
